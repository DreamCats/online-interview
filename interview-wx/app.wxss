/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.loading {
  width:100%;
  height:100rpx;
  position:absolute;
  top:50%;
  color:#666;
  font-size:32rpx;
  font-family:Arial, Helvetica, sans-serif;
  margin-top:-200rpx;
  text-align:center;
}

.loading__icon {
  width:80rpx;
  height:80rpx;
}