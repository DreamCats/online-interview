<view class="loading" wx:if="{{isLoading}}">
  <image class="loading__icon" src="/imgs/loading.svg"></image>
</view>
<block else>
  <i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab key="0" title="前端"></i-tab>
    <i-tab key="1" title="后端"></i-tab>
  </i-tabs>
</block>

<block wx:for="{{companies}}" wx:key="id">
  <i-cell title="{{item._id}} : {{item.name}}" is-link url="/pages/mj/index?id={{item._id}}&name={{item.name}}"></i-cell>
</block>


<block wx:if="{{finish}}">
  <i-divider content="加载已经完成,没有其他数据" color="#ed3f14" lineColor="#ed3f14"></i-divider>
</block>
